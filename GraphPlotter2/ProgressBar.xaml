<Window x:Class="GraphPlotter2.ProgressBar"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphPlotter2"
        mc:Ignorable="d"
        Title="Progress" Height="120" Width="300" WindowStyle="None" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <ProgressBar x:Name="progressBar" HorizontalAlignment="Center" Height="15" Margin="0,72,0,0" VerticalAlignment="Top" Width="280"/>
        <Label x:Name="processingTitle" Content="Processing" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label x:Name="processingDetail" Content="Proc" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" FontSize="10"/>
        <Label x:Name="progressCounter" Content="0.00/100" HorizontalAlignment="Right" Margin="0,87,10,0" VerticalAlignment="Top" FontSize="10"/>
    </Grid>
</Window>
